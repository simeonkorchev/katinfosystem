<Custom:Window xmlns:Custom="clr-namespace:Presentation.Windows"
               x:Class="Presentation.Windows.GetResolutionWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Width="250"
               Height="250"
               xmlns:local="clr-namespace:BusinessLogic;assembly=BusinessLogic"
        Title="Секретен ключ">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Въведете ключ"></TextBlock>
        <TextBlock Grid.Row="3" Text="{Binding ErrorMessage}" Style="{StaticResource ErrorMessage}"></TextBlock>
        <PasswordBox Grid.Row="1" Name="SecretKeyPB"></PasswordBox>
        <Button Grid.Row="2" Content="Въведи" Command="{Binding VerifySecretKeyCommand}"></Button>
    </Grid>
</Custom:Window>
