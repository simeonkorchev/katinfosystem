<Custom:Page xmlns:Custom="clr-namespace:Presentation.Pages"
             x:Class="Presentation.Pages.LoginRegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Style="{StaticResource MainFrame}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BigButton}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="100"/>
            </Style>
        </Grid.Resources>
        <Button Grid.Column="0" Content="Вход" Command="{Binding OpenLoginPageCommand}"/>
        <Button Grid.Column="1" Content="Регистрация" Command="{Binding OpenRegisterPageCommand}"/>
    </Grid>
</Custom:Page>
